<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wherever" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/background_main</item>
        <item name="android:textColor">@color/font_main</item>
    </style>

    <style name="textTitle">
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:textSize">@dimen/majorTitleTextSize</item>
        <item type="id" name="title"/>
    </style>

    <style name="textBody">
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">@dimen/bodyTextSize</item>
    </style>

    <style name="textEditCaption">
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">@dimen/subTitleTextSize</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="mainButton">
        <item name="android:background">@drawable/round_main_button</item>
        <item name="android:textSize">@dimen/majorTitleTextSize</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="subButton">
        <item name="android:background">@drawable/round_sub_button</item>
        <item name="android:textSize">@dimen/subTitleTextSize</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/edittext_rounded_conner</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>